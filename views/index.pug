extends layout

block content
        h1 #{title}

        ul.list-group
            each article, i in articles
                li.list-group-item
                    a(href='/articles/'+article._id)= article.title 
                    if user
                        if user.id == article.author
                            a.btn.btn-danger.float-right#delete(href='', data-id= article._id) Delete
